                    android:fontFamily="@font/notosanskr_regular"
                    android:textSize="12sp"
                    android:textColor="@color/gray_3"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@+id/text_best_book_introduce"
